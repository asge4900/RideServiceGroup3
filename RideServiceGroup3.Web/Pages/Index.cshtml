@page
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@using RideServiceGroup3.Entities
@model RideServiceGroup3.Web.Pages.IndexModel
@{
    ViewData["Title"] = "Index";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}


<div class="wrapper">
   
    <form class="row" action="/" method="post">
        @Html.AntiForgeryToken()
        <div>
            <p>Kategori:</p>
            <select asp-for="Category">
                <option value="all">Alle</option>
                @foreach (RideCategory rideCategory in Model.RideCategories)
                {
                    <option value="@rideCategory.Name">@rideCategory.Name</option>
                }
            </select>
        </div>

        <div>
            <p>Status:</p>
            <select asp-for="Status">
                <option value="0">Alle</option>
                <option value="1">Virker</option>
                <option value="2">Ude af drift</option>
                <option value="3">Repareres</option>
            </select>
        </div>
        <div>
            <input type="text" asp-for="SearchString" />
            <input type="submit" value="Søg" />
        </div>
    </form>     
   

    <div class="rides"> 
        @{
            foreach (Ride ride in Model.Rides)
            {

                <div class="ride">
                    <a href="Ride/@ride.Id">
                        <h2>@ride.Name</h2>
                        <img src="@ride.Url" />
                        <p>@ride.GetShortDescription()</p>
                        <p>@ride.TranslateStatus()</p>
                    </a>
                </div>
            }
        }
    </div>
</div>

